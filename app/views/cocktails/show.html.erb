<h1> <%=  @cocktail.name %> </h1>


<% @cocktail.doses.each do |dose| %>
<p> The dosage is: <%= dose.description %> </p>
<p> The ingredients are: <%= dose.ingredient.name %> </p>
  <p> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"> </i> </p>
  <% end %>
<% end %>


<%  if @cocktail.photo.attached? %>
<p>
<%= cl_image_tag @cocktail.photo.key, height: 300, crop: :fill %>
</p>
<% end %>


<%= link_to "Would you like to add a dose" , new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-sm" %>
<br>
<%= link_to "Go back to all Cocktails", cocktails_path, class: "btn btn-primary btn-sm" %>
